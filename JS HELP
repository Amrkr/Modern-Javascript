=========================== Alphabets =======================

var lastName = employee.getValue('lastname');
						var format = /^[A-Za-z]+$/;						
						
						if(!format.test(lastName) && lastName){							
							employee.setValue('lastname', '');
							dialog.alert({
								title : 'Error - Last Name',
								message : "Name should contains alphabets only."
							});
							return false;
							
=========================== Numeric ================================

var reg = /^\d+$/;							
